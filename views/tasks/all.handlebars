<h2>Todas as tarefas</h2>
{{#if tasks}}
<ul class="task-list">
    {{#each tasks}}
    <li>
        {{#if this.done}}
            <a href="/" class="title done">{{this.title}}</a>
        {{else}}
            <a href="/" class="title">{{this.title}}</a>
        {{/if}}
        <div class="actions">
            <form action="/tasks/updatestatus" method="post">
                <input type="hidden" name="id" value="{{this.id}}">
                <input type="hidden" name="done" value="{{this.done}}">
                <button type="submit">
                    <a href=""><i class="bi bi-check2"></i></a>
                </button>
            </form>
            <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
            <form action="/tasks/remove" method="post">
                <input type="hidden" name="id" value="{{this.id}}">
                <button type="submit" value="Excluir">
                    <i class="bi bi-x-lg"></i>
                </button>
            </form>

        </div>
    </li>
    {{/each}}
</ul>
{{else}}
<p>Sem tarefas no momento.</p>
{{/if}}